<div class="container">
  <h1>Pets</h1>

  <div class="row">
    <div class="col-4">
      
    </div>

    <div class="col-8">
      <ul class="list-group">
        <% @pets.each do |pet| %>
          <li class="list-group-item"><%= pet.species_icon %> <%= pet.name %> the <%= pet.species.humanize %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
